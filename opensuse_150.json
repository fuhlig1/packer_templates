{
  "variables": {
    "HTTP_PROXY": "{{env `HTTP_PROXY`}}",
    "HTTPS_PROXY": "{{env `HTTPS_PROXY`}}",
    "FTP_PROXY": "{{env `FTP_PROXY`}}",
    "RSYNC_PROXY": "{{env `RSYNC_PROXY`}}",
    "NO_PROXY": "{{env `NO_PROXY`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "build_type": "server"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "normal",
      "output_directory": "base_images/output_opensuse_150_{{user `build_type`}}_amd64",
      "vm_name": "packer-opensuse-150-{{user `build_type`}}-amd64",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netsetup=dhcp<wait>",
        " install=http://download.opensuse.org/distribution/leap/15.0/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed_new.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "opensuse/http",
      "iso_checksum": "1a322de7c215da96fdbad4c247d218eb79073c5620a332a759c0291b44746fbc",
      "iso_checksum_type": "sha256",
      "iso_url": "http://download.opensuse.org/distribution/leap/15.0/iso/openSUSE-Leap-15.0-NET-x86_64.iso",
      "ssh_username": "fairroot",
      "ssh_password": "FairRoot",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/shutdown -P now' > shutdown.sh; echo 'FairRoot' | sudo -S sh 'shutdown.sh'",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    },
    {
      "type": "virtualbox-iso",
      "name": "proxy",
      "output_directory": "base_images/output_opensuse_150_{{user `build_type`}}_amd64",
      "vm_name": "packer-opensuse150-{{user `build_type`}}-amd64",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=enp0s3 netsetup=dhcp<wait>",
        " proxy={{user `http_proxy`}}<wait>",
        " install=http://download.opensuse.org/distribution/leap/15.0/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://redmine.cbm.gsi.de/attachments/download/362/preseed.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "opensuse/http",
      "iso_checksum": "1a322de7c215da96fdbad4c247d218eb79073c5620a332a759c0291b44746fbc",
      "iso_checksum_type": "sha256",
      "iso_url": "http://download.opensuse.org/distribution/leap/15.0/iso/openSUSE-Leap-15.0-NET-x86_64.iso",
      "ssh_username": "fairroot",
      "ssh_password": "FairRoot",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/shutdown -P now' > shutdown.sh; echo 'FairRoot' | sudo -S sh 'shutdown.sh'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
         "HTTP_PROXY={{user `HTTP_PROXY`}}",
         "HTTPS_PROXY={{user `HTTPS_PROXY`}}",
         "FTP_PROXY={{user `FTP_PROXY`}}",
         "RSYNC_PROXY={{user `RSYNC_PROXY`}}",
         "NO_PROXY={{user `NO_PROXY`}}",
         "http_proxy={{user `http_proxy`}}",
         "https_proxy={{user `https_proxy`}}",
         "ftp_proxy={{user `ftp_proxy`}}",
         "rsync_proxy={{user `rsync_proxy`}}",
         "no_proxy={{user `no_proxy`}}",
         "build_type={{user `build_type`}}"
      ],
      "execute_command": "echo 'FairRoot'|sudo -S {{.Vars}} sh '{{.Path}}'",
      "scripts": [
        "opensuse/script/update.sh",
        "opensuse/script/passwordless_sudo.sh",
        "common/script/guestAddition.sh",
        "opensuse/script/cleanup.sh"
      ]
    }
  ]  
}    