{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "output_ubuntu_1404-amd64/packer-ubuntu1404-server-amd64.ovf",
      "ssh_username": "fairroot",
      "ssh_password": "FairRoot",
      "ssh_timeout": "10000s",
      "shutdown_command": "echo 'FairRoot' | sudo -S shutdown -P now",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"]
      ]
    }      
  ],
  "provisioners": [
    {
     "type": "shell",
      "execute_command": "echo 'FairRoot' | sudo -S -E sh {{.Path}}",
      "scripts": [
        "ubuntu/script/FairSoft_Dependencies.sh",
        "common/script/FairSoft.sh"
      ]
    }
  ]
}
