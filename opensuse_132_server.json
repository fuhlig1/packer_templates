{
  "variables": {
    "HTTP_PROXY": "{{env `HTTP_PROXY`}}",
    "HTTPS_PROXY": "{{env `HTTPS_PROXY`}}",
    "FTP_PROXY": "{{env `FTP_PROXY`}}",
    "RSYNC_PROXY": "{{env `RSYNC_PROXY`}}",
    "NO_PROXY": "{{env `NO_PROXY`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "output_directory": "output_opensuse_132_server_amd64",
      "vm_name": "packer-opensuse132-server-amd64",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=enp0s3 netsetup=dhcp<wait>",
        " proxy={{user `http_proxy`}}<wait>",
        " install=http://download.opensuse.org/distribution/13.2/repo/oss/ insecure=1<wait>",
        " lang=en_US autoyast=http://redmine.cbm.gsi.de/attachments/download/362/preseed.xml<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "OpenSUSE_64",
      "http_directory": "opensuse/http",
      "iso_checksum": "a91adf9a9007b87c92fa6c4c05d252ac6290e41509996cd6a5838963b161a003",
      "iso_checksum_type": "sha256",
      "iso_url": "http://download.opensuse.org/distribution/13.2/iso/openSUSE-13.2-NET-x86_64.iso",
      "ssh_username": "fairroot",
      "ssh_password": "FairRoot",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/shutdown -P now' > shutdown.sh; echo 'FairRoot' | sudo -S sh 'shutdown.sh'"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
         "HTTP_PROXY={{user `HTTP_PROXY`}}",
         "HTTPS_PROXY={{user `HTTPS_PROXY`}}",
         "FTP_PROXY={{user `FTP_PROXY`}}",
         "RSYNC_PROXY={{user `RSYNC_PROXY`}}",
         "NO_PROXY={{user `NO_PROXY`}}",
         "http_proxy={{user `http_proxy`}}",
         "https_proxy={{user `https_proxy`}}",
         "ftp_proxy={{user `ftp_proxy`}}",
         "rsync_proxy={{user `rsync_proxy`}}",
         "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'FairRoot'|sudo -S -E sh '{{.Path}}'",
      "scripts": [
        "opensuse/script/update_server.sh",
        "ubuntu/script/guestAddition.sh",
        "ubuntu/script/cleanup.sh"
      ]
    }
  ]  
}    