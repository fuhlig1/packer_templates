  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'FairRoot' | sudo -S -E sh {{.Path}}",
      "scripts": [
        "debian/script/update.sh",
        "debian/script/guestAddition.sh",
        "debian/script/cleanup.sh"
      ]
    }
  ]  
